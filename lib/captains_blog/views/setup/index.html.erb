<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN"
  "http://www.w3.org/TR/html4/strict.dtd">
<html>
  <head>
    <style type="text/css" media="screen">
      body { background-color: #eee; font: 12px/20px "Lucida Grande", helvetica, sans-serif; }
      #content { background-color: #fff; width: 500px; margin: 20px auto; padding: 20px; }
      h1 { color: #048; margin-top: 0; }
      fieldset { border: 0; margin: 0 0 10px 0; padding: 0; }
      fieldset legend { color: #999; font-size: 14px; margin: 0; padding: 0; }
      label { font-size: 14px; font-weight: bold; display: block; margin-top: 10px; }
      input { font-size: 14px; }

      .error { background-color: #c55; color: #fff; font-size: 12px; padding: 10px; }
      .error h2 { font-size: 12px; margin: 0; }
      .error ul { margin: 0; }
    </style>
  </head>
  <body>
    <div id="content">
      <h1>Welcome to Captain's Blog!</h1>
      <p>To get started, you'll just need to set up some information about your site.</p>
      <% form '/' do %>
        <fieldset>
          <legend>Blog</legend>

          <%= error_messages_for(@blog) %>

          <label for="blog_title">Title</label>
          <input type="text" id="blog_title" name="blog[title]" value="<%=h @blog.title %>">

          <label for="blog_tagline">Tagline</label>
          <input type="text" id="blog_tagline" name="blog[tagline]" value="<%=h @blog.tagline %>">

          <label for="blog_slug">Slug</label>
          <input type="text" id="blog_slug" name="blog[slug]" value="<%=h @blog.slug %>">
        </fieldset>

        <fieldset>
          <legend>Admin User</legend>
          
          <%= error_messages_for(@user) %>

          <label for="user_first_name">First Name</label>
          <input type="text" id="user_first_name" name="user[first_name]" value="<%=h @user.first_name %>">

          <label for="user_last_name">Last Name</label>
          <input type="text" id="user_last_name" name="user[last_name]" value="<%=h @user.last_name %>">

          <label for="user_email">Email</label>
          <input type="text" id="user_email" name="user[email]" value="<%=h @user.email %>">
          
          <label for="user_password">Password</label>
          <input type="password" id="user_password" name="user[password]">
          
          <label for="user_password_confirmation">Password Confirmation</label>
          <input type="password" id="user_password_confirmation" name="user[password_confirmation]">
        </fieldset>
        <input type="submit" value="Create Blog!" style="font-size: 18px">
      <% end %>
    </div>
  </body>
</html>